{
    "extends": [
      "plugin:prettier/recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": ["prettier"],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "prettier/prettier": [
        "error",
        {
          "bracketSpacing": true,
          "jsxBracketSameLine": true,
          "singleQuote": false,
          "tabWidth": 2,
          "trailingComma": "all",
          "useTabs": false,
          "endOfLine": "auto"
        }
      ],
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }